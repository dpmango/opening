include _mixins
doctype html
html(lang="en")
  head
    include _head

  body(class=bodyClass)
    // place where pjax bindings happen's
    include ../components/_preloader
    #barba-wrapper
      include ../components/_doors
      block header
        include ../components/_header
    
      // what should be changed with every pjax
      .page(class=outClass)
        .page__content
          block content

        block footer
          //- include ../components/_footer
        include ../components/_browser
          
      block scripts
        include _scripts
